# =====================================================
# PRODMAIS UMC - Configurações de Ambiente
# =====================================================
# Copie este arquivo para .env e ajuste os valores

# -----------------------------------------------------
# BANCO DE DADOS MYSQL (Locaweb Produção ou Local)
# -----------------------------------------------------
MYSQL_HOST=localhost
MYSQL_DB=prodmais_umc
MYSQL_USER=root
MYSQL_PASS=root

# Para Locaweb (Produção):
# MYSQL_HOST=seu_host.mysql.dbaas.com.br
# MYSQL_DB=seu_banco
# MYSQL_USER=seu_usuario
# MYSQL_PASS=sua_senha_segura

# -----------------------------------------------------
# ELASTICSEARCH (Opcional em Produção)
# -----------------------------------------------------
ES_HOST=localhost:9200
ES_USE=true  # false = desabilitar ES e usar apenas MySQL

# -----------------------------------------------------
# AMBIENTE
# -----------------------------------------------------
APP_ENV=development  # production | development
APP_DEBUG=true       # false em produção
APP_URL=http://localhost:8000

# -----------------------------------------------------
# INSTITUIÇÃO (UMC)
# -----------------------------------------------------
INSTITUICAO_NOME=Universidade de Mogi das Cruzes
INSTITUICAO_SIGLA=UMC
BRANCH_NAME=PRODMAIS UMC

# -----------------------------------------------------
# SESSÃO E SEGURANÇA
# -----------------------------------------------------
SESSION_LIFETIME=7200  # segundos (2 horas)
SESSION_SECURE=false   # true em produção HTTPS

# -----------------------------------------------------
# UPLOAD DE ARQUIVOS
# -----------------------------------------------------
UPLOAD_MAX_SIZE=10485760  # 10MB em bytes
UPLOAD_DIR=data/uploads

# -----------------------------------------------------
# INTEGRAÇÕES
# -----------------------------------------------------
# OpenAlex API
OPENALEX_EMAIL=seu_email@umc.br

# ORCID (se implementar autenticação)
ORCID_CLIENT_ID=
ORCID_CLIENT_SECRET=

# -----------------------------------------------------
# CACHE
# -----------------------------------------------------
CACHE_ENABLED=true
CACHE_TTL=3600  # segundos

# -----------------------------------------------------
# LOGS
# -----------------------------------------------------
LOG_LEVEL=debug  # debug | info | warning | error
LOG_DIR=data/logs
